<%- include ("includes/header.ejs") -%>

<div class="admission-form">

<h4>Admission Form</h4>
<form  action="/submit" method="post">
<div class="form-group">
<label for="name">Applicants Name(BLOCK LETTERS)</label>
<div class="form-control">
  <input type="text" name="Name" value="" id="name" class="form-control" required>
</div>
</div>


<div class="form-group">
  <label for="permanent-address">Permanent Address</label>
<div class="form-control">
  <input type="text" name="Paddress" value="" id="permanent-address" class="form-control" required>

</div>
  </div>
<div class="form-group">
  <label for="email">Email</label>

<div class="form-control">
  <input type="email" name="email" value="" id="email" class="form-control" required  >

</div>
</div>
<div class="form-group">
  <label for="age">Age</label>

<div class="form-control">
  <input type="text" name="age" value="" id="age" class="form-control" required >

</div>
</div>
<div class="form-group">
  <label for="gender">Gender</label>

<div class="form-control">
<select class="" name="gender">
  <option value="Male">Male</option>
  <option value="Female">Female</option>
  <option value="Other">Other</option>
</select>
</div>
</div>
<div class="form-group">
  <label for="phone">Phone</label>

<div class="form-control">
  <input type="text" name="phone" value="" id="phone" class="form-control" required>

</div>
</div>
<div class="form-group">
  <label for="current-address">Current Address</label>
  <div class="form-control">
    <input type="text" name="currentAddress" value="" id="current-address" class="form-control" required>

  </div></div>
<div class="form-group">
  <label for="mothers-name">Mother's Name</label>
  <div class="form-control">
    <input type="text" name="motherName" value="" id="mothers-name" class="form-control" required>

  </div>
</div>
<div class="form-group">
  <label for="fathers-name">Father's Name</label>
  <div class="form-control">
    <input type="text" name="fatherName" value="" id="fathers-name" class="form-control" required>
  </div>
  </div>
  <div class="form-group">
    <label for="stream">Stream</label>
    <div class="form-control">
    <select  name="stream">
<option value="Science">Science</option>
<option value="Management">Management</option>
    </select>
        </div>
  </div>
  <input id="checkbox" type="checkbox" onclick="check()">&nbsp;<span class="terms">By Clicking On Submit Button, I agree to the Terms and Conditions of the Bright Future College</span>

<div class="form-group">
  <button type="submit" id="button" name="button">Submit</button>
</div>
  </form>
</div>
<script src="../js/script.js">

</script>
<%- include ("includes/footer.ejs") -%>
